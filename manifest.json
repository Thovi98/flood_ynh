{
    "name": "Flood",
    "id": "flood",
    "packaging_format": 1,
    "description": {
        "en": "Monitoring service for various torrent clients",
        "fr": "Service de surveillance pour divers clients torrent"
    },
    "version": "0.1",
    "url": "https://github.com/TakerMc/flood_ynh",
    "license": "free",
    "maintainer": {
        "name": "Taker",
        "email": "me@taker.fr",
        "url": "https://taker.fr"
    },
    "requirements": {
        "yunohost": ">> 2.5.6"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for flood",
                    "fr": "Choisissez un nom de domaine pour flood"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for flood",
                    "fr": "Choisissez un chemin pour flood"
                },
                "example": "/flood",
                "default": "/flood"
            },
            {
                "name": "data_dir",
                "type": "path",
                "ask": {
                    "en": "Choose a folder to store the downloads",
                    "fr": "Choisissez un dossier pour sauver les telechargements"
                },
                "example": "/mnt/disk1/torrents",
                "default": "/home/flood/download"
            }
        ]
    }
}
